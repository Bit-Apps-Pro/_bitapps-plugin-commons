{
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": ["./frontend/src/types"],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": false,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "paths": {
      "@common/*": ["./frontend/src/common/*"],
      "@features/*": ["./frontend/src/components/features/*"],
      "@utilities/*": ["./frontend/src/components/utilities/*"],
      "@components/*": ["./frontend/src/components/*"],
      "@icons/*": ["./frontend/src/icons/*"],
      "@resource/*": ["./frontend/src/resource/*"],
      "@pages/*": ["./frontend/src/pages/*"],
      "@static/*": ["./frontend/src/static/*"],
      "@config/*": ["./frontend/src/config/*"],
      "@/*": ["./frontend/src/*"],
      "@plugin-commons/*": ["./frontend/_plugin-commons/*"]
    }
  },
  "include": [
    "frontend/src",
    "frontend/_plugin-commons",
    "frontend/src/types",
    "vite.config.ts",
    "scripts/",
    "_bitapps-plugin-commons"
  ],
  "exclude": ["node_modules"],
  "types": ["node", "vite/client"]
}
